
; time
(defpoll time :interval "1s" :initial "time" `date +%H:%M:%S`)

; bar - window
(defwindow mybar
  :monitor 0
  :geometry (geometry
    :x "0%" :y "1%" :width "98%" :height "30px" :anchor "top center")
  :stacking "fg"
  :exclusive true
  :focusable "none"
  (box :class "bar" :orientation "horizontal" :halign "center" time)
)
